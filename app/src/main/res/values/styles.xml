<resources>

    <!-- Base application theme. -->
    <!-- Activity themes -->

    <style name="Theme.Base" parent="android:Theme.Light" />

    <style name="Theme.Sample" parent="Theme.Base" />

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BrandedEditText.control" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="BrandedSpinner.control" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="Widget" />


    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="TooltipStyle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">10dp</item>

    </style>

</resources>
